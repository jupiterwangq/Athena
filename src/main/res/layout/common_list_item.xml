<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#000"
              android:textSize="@dimen/uilib_app_text_size_second_level"
              android:layout_marginTop="8dp"
              android:layout_marginStart="16dp"
              android:layout_marginEnd="16dp"
              android:maxLines="1"
              android:ellipsize="end"
              android:id="@+id/title"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/app_second_level_text_color"
              android:textSize="@dimen/uilib_app_text_size_small"
              android:layout_marginTop="8dp"
              android:layout_marginStart="16dp"
              android:layout_below="@id/title"
              android:id="@+id/second_title"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/app_second_level_text_color"
              android:layout_below="@id/second_title"
              android:textSize="@dimen/uilib_app_text_size_small"
              android:maxLines="2"
              android:ellipsize="end"
              android:layout_marginBottom="8dp"
              android:layout_marginTop="3dp"
              android:layout_marginStart="16dp"
              android:layout_marginEnd="16dp"
              android:id="@+id/third_title"/>

    <TextView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/icon"
               android:layout_centerVertical="true"
               android:layout_alignParentEnd="true"
               android:layout_marginEnd="16dp"
               android:textSize="@dimen/uilib_app_text_size_small"
               android:textColor="@color/theme_red_light"
    />

</RelativeLayout>